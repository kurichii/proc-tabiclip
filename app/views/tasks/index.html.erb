<p style="color: green"><%= notice %></p>

<% content_for :title, "Tasks" %>

<h1>Tasks</h1>
<i class="fa-solid fa-plane"></i>
<i class="fa-solid fa-plane" style="color: #74C0FC;"></i>
<i class="fa-solid fa-plane" style="color: #FFD43B;"></i>

<div id="tasks">
  <% @tasks.each do |task| %>
    <%= render task %>
    <p>
      <%= link_to "Show this task", task %>
    </p>
  <% end %>
</div>

<%= link_to "New task", new_task_path %>
